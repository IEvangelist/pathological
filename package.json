{
  "name": "pathological",
  "displayName": "Pathological",
  "description": "A path manipulation extension for Visual Studio Code.",
  "version": "0.0.1",
  "publisher": "IEvangelist",
  "repository": "https://github.com/IEvangelist/pathological",
  "license": "MIT",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pathological.selectUriForRelative",
        "title": "Select for Relative Path",
        "shortTitle": "Select Relative"
      },
      {
        "command": "pathological.getRelativePath",
        "title": "Copy Relative Path for Selected",
        "shortTitle": "Relative Path for Selected"
      },
      {
        "command": "pathological.getAsFileSystemTree",
        "title": "Copy as File System Tree",
        "shortTitle": "As Tree"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "pathological.selectUriForRelative",
          "group": "6_copypath"
        },
        {
          "when": "pathological.hasSelectedUri",
          "command": "pathological.getRelativePath",
          "group": "6_copypath"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "pathological.getAsFileSystemTree",
          "group": "6_copypath"
        }
      ]
    },
    "configuration": {
      "title": "Pathological",
      "properties": {
        "pathological.closedFolder": {
          "type": "string",
          "description": "The string representation of a closed folder when rendering as a file-system tree.",
          "default": "üìÅ"
        },
        "pathological.openFolder": {
          "type": "string",
          "description": "The string representation of an open folder when rendering as a file-system tree.",
          "default": "üìÇ"
        },
        "pathological.verticalLine": {
          "type": "string",
          "description": "The string representation of a vertical line when rendering as a file-system tree.",
          "default": "‚îÇ"
        },
        "pathological.horizontalLine": {
          "type": "string",
          "description": "The string representation of a horizontal line when rendering as a file-system tree.",
          "default": "‚îÄ"
        },
        "pathological.corner": {
          "type": "string",
          "description": "The string representation of a corner when rendering as a file-system tree.",
          "default": "‚îî"
        },
        "pathological.junction": {
          "type": "string",
          "description": "The string representation of a junction when rendering as a file-system tree.",
          "default": "‚îú"
        },
        "pathological.indent": {
          "type": "number",
          "description": "The number of spaces to indent when rendering as a file-system tree.",
          "default": 4
        },
        "pathological.normalizePath": {
          "type": "boolean",
          "description": "Whether or not to normalize the path when copying relative path.",
          "default": false
        }
      }
    }
  },
  "scripts": {
    "clean": "rimraf ./dist ./out",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.ts\"",
    "format-check": "prettier --check \"**/*.ts\"",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "^20.6.3",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "@vscode/test-electron": "^2.3.0",
    "@types/mocha": "^10.0.2",
    "mocha": "^10.2.0",
    "glob": "^8.1.0",
    "eslint": "^8.49.0",
    "ts-node": "^10.9.1",
    "source-map-support": "^0.5.12",
    "typescript": "^5.2.2",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.3",
    "rimraf": "^3.0.2",
    "cross-env": "^7.0.3"
  },
  "dependencies": {
    "@vscode/vsce": "^2.21.1"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/IEvangelist"
  }
}
