{
    "name": "pathological",
    "displayName": "Pathological",
    "description": "A path manipulation extension for Visual Studio Code.",
    "version": "0.0.1",
    "publisher": "IEvangelist",
    "repository": "https://github.com/IEvangelist/pathological",
    "engines": {
        "vscode": "^1.82.2"
    },
    "categories": [
        "Other"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "pathological.selectUriForRelative",
                "title": "Select for Relative Path"
            },
            {
                "command": "pathological.getRelativePath",
                "title": "Copy Relative Path for Selected"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "pathological.selectUriForRelative",
                    "group": "6_copypath"
                },
                {
                    "when": "pathological.hasSelectedUri",
                    "command": "pathological.getRelativePath",
                    "group": "6_copypath"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src/**/*.ts --fix",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^20.6.3",
        "@types/vscode": "^1.82.0",
        "@typescript-eslint/eslint-plugin": "^6.7.2",
        "@typescript-eslint/parser": "^6.7.2",
        "eslint": "^8.49.0",
        "typescript": "^5.2.2"
    }
}